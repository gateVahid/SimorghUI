<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:src="@drawable/vector_entartainment"
                android:tint="@color/Entertainment" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:text="سرگرمی ها"
                android:textColor="@color/PrimaryText"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:autoText="false"
                android:elegantTextHeight="false"
                android:freezesText="false"
                android:gravity="center"
                android:text="تماشای فیلم و کارتون . لذت بردن از موسیقی .اینترنت "
                android:textAllCaps="false"
                android:textColor="@color/PrimaryText"
                android:textSize="18sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:src="@drawable/vector_food"
                android:tint="@color/Food" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:text="لیست غذاها"
                android:textColor="@color/PrimaryText"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:autoText="false"
                android:elegantTextHeight="false"
                android:freezesText="false"
                android:gravity="center"
                android:text="لیست غذاهاوسفرش غذاودیدن مختویات هر غذا و تاریخچه غذاها"
                android:textAllCaps="false"
                android:textColor="@color/PrimaryText"
                android:textSize="18sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:padding="16dp"
                android:src="@drawable/vector_comment"
                android:tint="@color/comment" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:text="پیشنهادات"
                android:textColor="@color/PrimaryText"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:autoText="false"
                android:elegantTextHeight="false"
                android:freezesText="false"
                android:gravity="center"
                android:text="انتقادات و پیشنهادات و نظرات شما در مورد خدمات ارایه شده"
                android:textAllCaps="false"
                android:textColor="@color/PrimaryText"
                android:textSize="18sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>